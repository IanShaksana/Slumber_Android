<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:alignContent="stretch"
        app:flexDirection="column">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="row"
            app:layout_flexBasisPercent="10%">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/cross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_back" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/EmailPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:src="@drawable/logo_slumber"
                    android:text="Profile"
                    android:textAlignment="center"
                    android:textColor="#fafbbd"
                    android:textSize="20dp" />


                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_edit" />


            </RelativeLayout>

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="column"
            app:justifyContent="center"
            app:layout_flexBasisPercent="90%">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_flexBasisPercent="80%">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/EmailPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Email"
                            android:textColor="#fafbbd"
                            android:textSize="15dp" />


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/t1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/login_input_box"
                            app:boxBackgroundMode="none"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reg_email"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:textColor="#fafbbd"
                                app:boxBackgroundMode="none" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textview.MaterialTextView
                            style="@style/EmailPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:text="Name"
                            android:textColor="#fafbbd"
                            android:textSize="15dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/t2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/login_input_box"
                            app:boxBackgroundMode="none"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reg_name"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:inputType="text"
                                android:textColor="#fafbbd"
                                app:boxBackgroundMode="none" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textview.MaterialTextView
                            style="@style/EmailPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:text="Gender"
                            android:textColor="#fafbbd"
                            android:textSize="15dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tgender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/login_input_box"
                            app:boxBackgroundMode="none"
                            app:endIconDrawable="@drawable/ic_dropdown2"
                            app:endIconMode="custom"
                            app:endIconTint="#fafbbd"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reg_gender"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:clickable="true"
                                android:cursorVisible="false"
                                android:focusableInTouchMode="false"
                                android:inputType="text"
                                android:textColor="#fafbbd"
                                app:boxBackgroundMode="none" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textview.MaterialTextView
                            style="@style/EmailPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:text="Province"
                            android:textColor="#fafbbd"
                            android:textSize="15dp"
                            app:boxBackgroundMode="none" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/t4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/login_input_box"
                            app:endIconDrawable="@drawable/ic_dropdown2"
                            app:endIconMode="custom"
                            app:endIconTint="#fafbbd"
                            app:boxBackgroundMode="none"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reg_add"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:clickable="true"
                                android:cursorVisible="false"
                                android:focusableInTouchMode="false"
                                android:inputType="text"
                                android:textColor="#fafbbd"
                                android:textColorHint="#526c97"
                                app:boxBackgroundMode="none" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textview.MaterialTextView
                            style="@style/EmailPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:text="Date of Birth"
                            android:textColor="#fafbbd"
                            android:textSize="15dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/t3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/login_input_box"
                            app:boxBackgroundMode="none"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reg_dob"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:clickable="true"
                                android:cursorVisible="false"
                                android:focusableInTouchMode="false"
                                android:inputType="text"
                                android:textColor="#fafbbd"
                                app:boxBackgroundMode="none" />

                        </com.google.android.material.textfield.TextInputLayout>



                    </LinearLayout>

                </ScrollView>


            </RelativeLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:flexDirection="row">

                <TextView
                    android:id="@+id/change_pass"
                    style="@style/button"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_margin="15dp"
                    android:text="Change Password"
                    android:textAllCaps="false"
                    android:textColor="#f96969"
                    app:layout_flexBasisPercent="70%" />

                <Button
                    android:id="@+id/done"
                    style="@style/button"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/login_sign_in_button"
                    android:text="Done"
                    android:textAllCaps="false"
                    android:textColor="#101930"
                    app:layout_flexBasisPercent="30%" />

            </com.google.android.flexbox.FlexboxLayout>

        </com.google.android.flexbox.FlexboxLayout>


    </com.google.android.flexbox.FlexboxLayout>


</LinearLayout>